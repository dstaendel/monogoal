<div class="edit-date-container">
  <%= simple_form_for(@goal, html: { class: "" }, data: { controller: "datepicker" }) do |f| %>
    <%= f.input :start_time, label: "Set Your Dates, Track Your Journey!", as: :string, input_html: { data: { datepicker_target: "date" } } %>
    <%= f.button :submit, "UPDATE", class:"date-update-btn" %>
  <% end %>
</div>
<div class="container-bottom">
  <div class="navbar-bottom">
    <div class="pomodoro">
      <button class="pomodoro-button" id="book"><i class="fas fa-book"></i></button>
      <div class="dropup nav-circle">

        <a href="/" class="button-back mx-5" role="button"></a>

      </div>
      <button class="pomodoro-button" id="clock"><i class="fas fa-clock"></i></button>
    </div>
  </div>
</div>
