<div class="container mt-5" data-controller="pomodoro" >
  <h2 class="text-center">I am Pomodoro Timer 🍅</h2>

  <div>
    <div data-pomodoro-target="display" class="mt-5 d-flex justify-content-center" style="font-size: 20px;">
      <!-- Change value (25:00) in pomodoro_controller.js -->
    </div>
    <div class="buttons-pomodoro mt-5 d-flex justify-content-center">
      <%= link_to "Start", "#", data: { action: "click->pomodoro#start"}, class: "btn" %>
      <%= link_to "Stop", "#", data: { action: "click->pomodoro#stop"}, class: "btn" %>
      <%= link_to "Reset", "#", data: { action: "click->pomodoro#reset"}, class: "btn" %>
    </div>
  </div>
</div>
