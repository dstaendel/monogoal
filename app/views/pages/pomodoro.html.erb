<div class="container-main" data-controller="toggle pomodoro" 
                            data-pomodoro-remaining-seconds-value="<%= params[:seconds] %>" 
                            data-pomodoro-running-value="<%= params[:running] %>">
  <div class="timer-container-main">
    <div class="timer-card">
      <div class="container mt-2" id="timer-container" >
        <h2 class="pomodoro-title ">POMODORO</h2>
        <div>
          <div data-pomodoro-target="display" id="timer" class="d-flex justify-content-center" style="font-size: 20px;">
            <!-- Change value (25:00) in pomodoro_controller.js -->
            <div data-pomodoro-target="display">25:00</div>
          </div>
          <div class="buttons-pomodoro d-flex justify-content-center">
            <%= link_to "<i class='fas fa-play'></i>".html_safe, "#", data: { action: "click->pomodoro#start"}, class: "btn", id: "start" %>
            <%= link_to "<i class='fas fa-pause'></i>".html_safe, "#", data: { action: "click->pomodoro#stop"}, class: "btn", id: "pause" %>
            <%= link_to "<i class='fas fa-sync-alt'></i>".html_safe, "#", data: { action: "click->pomodoro#reset"}, class: "btn", id: "reset" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="navbar-bottom">
    <div class="pomodoro">
      <button class="pomodoro-button" id="book"><i class="fas fa-book"></i></button>
      <div class="dropup nav-circle">

        <%= link_to "", root_path, class: "button-back mx-5", data: { action: "click->pomodoro#takeFive"} %>

      </div>
      <button class="pomodoro-button" id="clock"><i class="fas fa-clock"></i></button>
    </div>
  </div>
</div>
